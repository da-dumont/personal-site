---
import { readAll } from "../lib/markdoc/read";
import { blog } from "../lib/markdoc/frontmatter.schema";
import PageLayout from "../layouts/PageLayout.astro";
import PageMeta from "../components/PageMeta.astro";
import ExternalLinkIcon from "../components/ui/icons/external-link.astro";
import { SITE_TITLE } from "../config";

const posts = await readAll({
  directory: "blog",
  frontmatterSchema: blog,
});

const sortedPosts = posts
  .filter((p) => p.frontmatter.draft !== true)
  .sort(
    (a, b) =>
      new Date(b.frontmatter.date).valueOf() -
      new Date(a.frontmatter.date).valueOf()
  );
---

<PageLayout>
  <PageMeta title={`Blog | ${SITE_TITLE}`} slot="meta" />
  <section slot="main">
    <ul>
      {
        sortedPosts.map((post) => {
          const formattedDate = new Date(
            post.frontmatter.date
          ).toLocaleDateString("en-us", {
            year: "numeric",
            month: "short",
            day: "numeric",
          });
          return (
            <li class="post title">
              <a class="block" href={`/blog/${post.slug}`}>
                <div>
                  <h3>{post.frontmatter.title}</h3>
                  <time datetime={post.frontmatter.date.toISOString()} class="publish-date">
                  {formattedDate}
                  </time>
                </div>
                <div class="image-container"><img src={`${post.frontmatter.previewImage}`} class="preview-image"/></div>
              </a>
            </li>
          );
        })
      }
    </ul>
  </section>
</PageLayout>

<style>
  ul {
    list-style-type: none;
    padding: unset;
  }

  .post {
    line-height: 1.5;
    margin: 0 0 4rem 0;
    padding: 0;
  }

  .post a {
    display: flex;
    justify-content: space-between;
    align-items: center;
    column-gap: 20px;
  }

.image-container {
  max-width: 100px;
  max-height: 100px;
}
.preview-image {
  border-radius: 50%;
  object-fit: contain;
}

.post + .post {
  padding-top: 0.5rem;
}
.post h3 {
  margin: 0;
}

  .title a {
    color: var(--text);
    border-bottom: none;
  }

  .title a:hover {
    color: var(--text-link);
  }

  .icon-realign {
    margin-bottom: -1.5px;
    margin-left: 2px;
  }

  .publish-date {
    color: var(--text-muted);
    font-size: 0.875rem;
    font-style: italic;
  }
</style>
