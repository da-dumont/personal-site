---
/* 
  This layout is used in 
  - pages/index.astro
  - pages/blog.astro
  - pages/readings.astro
*/

// Import the global.css file here so that it is included on
import "../styles/global.css";
import { ViewTransitions } from 'astro:transitions';

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Favicon from "./Favicon.astro";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Global Metadata -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta name="generator" content="Dan Dumont, Engineering Leader" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link href="https://fonts.googleapis.com/css2?family=EB+Garamond:ital,wght@0,400..800;1,400..800&family=Oswald:wght@200..700&display=swap" rel="stylesheet">
    <Favicon />
    <ViewTransitions />
    <slot name="meta" />
  </head>

  <body class="text-text-body bg-bg-body max-w-3xl mx-auto px-4 sm:px-8">
    <Header />
    <main id="main">
      <slot name="main" />
    </main>
    <Footer />
  </body>
</html>
